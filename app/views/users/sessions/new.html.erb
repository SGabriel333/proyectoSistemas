<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <br/><br/><br/>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-1 col-md-2 col-lg-3"></div>
      <div class="ool-sm-10 col-md-8 col-lg-5">
        <h2>Acceder</h2>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: 'form-control mb-2', placeholder: 'E-mail'%>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control mb-2 mr-sm-2 mb-sm-0', placeholder: 'Contraseña'%>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label "Recordarme"%>
            </div>
          <% end -%>
          <%= render "devise/shared/links" %>
      </div>
      <div class="col-sm-1 col-md-2 col-lg-4"></div>
    </div>
    
    <!--Columna para el boton Iniciar Sesión-->
    <div class="row">
      <div class="col-6"></div>
      <div class="col-3">
        <div class="actions">
            <%= f.submit "Iniciar Sesión",class: 'btn btn-danger => boton'%>
        </div>
      </div>
      <div class="col-3"></div>
    </div>
   

  </div>
  <% end %>

  <footer>
        <div class="container"></div>
  </footer>
</body>
</html>
